{
  "manifest_version": 3,
  "name": "FitCheck - Smart Size Finder",
  "version": "0.1.0",
  "description": "Open-source size recommendations for online shopping. Your measurements never leave your device.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.asos.com/*",
    "https://*.zara.com/*",
    "https://*.boohoo.com/*",
    "https://*.prettylittlething.com/*",
    "https://*.hm.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.asos.com/*",
        "https://*.zara.com/*",
        "https://*.boohoo.com/*",
        "https://*.prettylittlething.com/*",
        "https://*.hm.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
